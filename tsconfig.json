{
  "compilerOptions": {
    "target": "ESNext",                            // Use ESNext for the latest features
    "module": "ESNext",                            // Use ES module syntax
    "moduleResolution": "Node",                    // Node.js module resolution strategy
    "outDir": "./dist",                            // Directory for compiled files
    "rootDir": "./src",                            // Root directory for your source files
    "esModuleInterop": true,                       // Enable interop between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true,      // Ensure consistent casing for imports
    "strict": true,                                // Enable strict type checking
    "skipLibCheck": true,                          // Skip checking of declaration files for speed
    "resolveJsonModule": true,                     // Allow importing JSON files
    "types": ["node", "puppeteer"],                // Include types for Node.js and Puppeteer
    "allowSyntheticDefaultImports": true,          // Allow default imports from modules without them
    "noImplicitAny": false,                        // Relax implicit `any` checking (optional)
    "allowJs": true                                // Allow JavaScript files to be compiled
  },
  "include": [
    "src/**/*"                                   // Include all source files
  ],
  "exclude": [
    "node_modules",                               // Exclude node_modules folder
    "dist"                                        // Exclude the build output folder
  ]
}